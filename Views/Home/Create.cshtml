@model Assignment.ViewModels.CreateClothesVM

@{
	ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Clothes</h4>
<hr />
<div class="row">
	<div class="col-md-5">
		<form asp-action="Create" enctype="multipart/form-data">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="clothes.Name" class="control-label"></label>
				<div class="row">
					<div class="col-md-9">
						<input asp-for="clothes.Name" class="form-control" />
					</div>
				</div>
				<span asp-validation-for="clothes.Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="clothes.Price" class="control-label"></label>
				<div class="row">
					<div class="col-md-9">
						<input asp-for="clothes.Price" class="form-control" />
					</div>
				</div>
				<span asp-validation-for="clothes.Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="clothes.Supplier" class="control-label"></label>
				<div class="row">
					<div class="col-md-9">
						<input asp-for="clothes.Supplier" class="form-control" />
					</div>
				</div>
				<span asp-validation-for="clothes.Supplier" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="clothes.Description" class="control-label"></label>
				<div class="row">
					<div class="col-md-9">
						<input asp-for="clothes.Description" class="form-control" />
					</div>
				</div>
				<span asp-validation-for="clothes.Description" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">Color</label>
				<div class="row">
					<div class="col-md-9">
						<select asp-for="clothesDetail.ColorID" class="form-control">
							@foreach (var x in ViewBag.ListColor)
							{
								<option value="@x.ID">@x.Value</option>
							}
						</select>
					</div>
					<div class="col-md-2">
						<button class="form-control" data-toggle="modal" data-target="#addColor" data-url="@Url.Action("CreateColor")">+</button>
					</div>
				</div>
				<span asp-validation-for="clothesDetail.ColorID" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label class="control-label">Size</label>
				<div class="row">
					<div class="col-md-9">
						<select asp-for="clothesDetail.SizeID" class="form-control">
							@foreach (var x in ViewBag.ListSize)
							{
								<option value="@x.ID">@x.Value</option>
							}
						</select>
					</div>
					<div class="col-md-2">
						<button class="form-control" data-toggle="modal" data-target="#addColor" data-url="@Url.Action("CreateColor")">+</button>
					</div>
				</div>
				<span asp-validation-for="clothesDetail.SizeID" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="clothesDetail.Quantity" class="control-label"></label>
				<div class="row">
					<div class="col-md-9">
						<input asp-for="clothesDetail.Quantity" class="form-control" />
					</div>
				</div>
				<span asp-validation-for="clothesDetail.Quantity" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}