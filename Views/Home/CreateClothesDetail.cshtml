@model Assignment.Models.ClothesDetail

@{
	ViewData["Title"] = "CreateClothesDetail";
}

<h1>CreateClothesDetail</h1>

<h4>ClothesDetail</h4>
<hr />
<div class="row">
	<div class="col-md-5">
		<form asp-action="CreateClothesDetails">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="row form-group">
				<label asp-for="ColorID" class="control-label"></label>
				<div class="col-md-9">
						<select asp-for="ColorID" class="form-control">
							@foreach (var x in ViewBag.ListColor)
							{
								<option value="@x.ID">@x.Value</option>
							}
						</select>
					</div>
					<div class="col-md-2">
						<button class="form-control" data-toggle="modal" data-target="#addColor" data-url="@Url.Action("CreateColor")">+</button>
					</div>
				<span asp-validation-for="ColorID" class="text-danger"></span>
			</div>
			<div class="row form-group">
				<label asp-for="SizeID" class="control-label"></label>
				<div class="col-md-9">
						<select asp-for="SizeID" class="form-control">
							@foreach (var x in ViewBag.ListSize)
							{
								<option value="@x.ID">@x.Value</option>
							}
						</select>
					</div>
					<div class="col-md-2">
						<button class="form-control" data-toggle="modal" data-target="#addColor" data-url="@Url.Action("CreateColor")">+</button>
					</div>
				<span asp-validation-for="SizeID" class="text-danger"></span>
			</div>
			<div class="row form-group">
				<label asp-for="Quantity" class="control-label"></label>
				<div class="col-md-9">
					<input asp-for="Quantity" class="form-control" />
				</div>
				<span asp-validation-for="Quantity" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to List</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}