							<li class="nav-item btn-nav1 dropdown" style="margin-top:5px">
								<a class="navbar-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="color:white;font-weight:bold;weight:30px;text-decoration:none;">
									<img src="img/icons8-user-24.png" alt="Logo" class="d-inline-block">
									Người dùng
								</a>
								<ul class="dropdown-menu">
									@if (Context.Session.GetString("UserRole") == "Admin")
									{
										<li><a asp-area="" asp-controller="Home" asp-action="ManageBill" class="dropdown-item">Quản lí hóa đơn</a></li>
										<li><a asp-area="" asp-controller="Home" asp-action="ListClotheses" class="dropdown-item">Quản lí sản phẩm</a></li>
										<li><a asp-area="" asp-controller="Home" asp-action="Chart" class="dropdown-item">Thống kê</a></li>
									}
								</ul>
							</li>
						}
						<li class="nav-item btn-nav1">
							<a class="navbar-link" style="color:white;font-weight:bold;text-decoration:none;" asp-area="" asp-controller="Home" asp-action="ShowCart">
								<button type="button" class="btn position-relative">
									<img src="img/icons8-shopping-cart-24.png" alt="Logo" class="d-inline-block">
									<span class="position-absolute top-0 start-50 badge rounded-pill bg-white" style="color:black;">
										0
									</span>
								</button>
								Giỏ hàng
							</a>
						</li>
					</ul>
