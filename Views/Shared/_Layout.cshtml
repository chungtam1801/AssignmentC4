							</form>
						</li>
						@if (Context.Session.GetString("UserName") == null)
						{
							<li class="nav-item btn-nav1" style="margin-top:5px">
								<a class="navbar-link" style="color:white;font-weight:bold;text-decoration:none;" asp-area="" asp-controller="Home" asp-action="RegisterView">
